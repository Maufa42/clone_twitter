<p class="title is-1 align-items-center justify-content-center">Login</p>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<% if @user.errors.any? %>
  <div class = "alert alert-danger">
  <% @user.errors.full_messages.each do |m|%>
    <div><%= m %></div>
    <% end %>
  </div>
<%end%>


  <div class="form-inputs">
    <div class = "field">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },class:"control" %>
    </div>
    <div class = "field">
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },class:"control" %>
    </div>
    <div class = "field">
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
  </div>

  <div class="form-actions control">
    <%= f.button :submit, "Log in",class:"button is-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>