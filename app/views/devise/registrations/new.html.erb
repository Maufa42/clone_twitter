<p class="title is-1 align-items-center justify-content-center">SignUp</p>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <% if @user.errors.any? %>
  <div class = "alert alert danger">
  <% @user.errors.full_messages.each do |m| %>
   <div> <%= m %> </div>
   <% end %>
  </div>
  <% end %>
  
  <div class="form-inputs">

   <div class = "field">
    <%= f.label :name%>
    <%= f.text_field :name,required: false, autofocus: true, input_html: { autocomplete: "name" },class:"control"%>
   </div>

    <div class = "field">
    <%= f.label :user_name%>

    <%= f.text_field :user_name,required: false, autofocus: true, input_html: { autocomplete: "user_name" },class:"control"%>
   </div>


   <div class = "field">
    <%= f.label :email%>

    <%= f.email_field :email,required: false, autofocus: true, input_html: { autocomplete: "email" },class:"control"%>
   </div>

   <div class = "field">
    <%= f.label :password%>

    <%= f.password_field :password, required: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" } ,class:"control"%>
   </div>

   <div class = "field">
    <%= f.label :password_confirmation%>

    <%= f.password_field :password_confirmation,required: false, input_html: { autocomplete: "new-password" } ,class:"control"%>
   </div>
  </div>

  <div class="form-actions control">
    <%= f.button :submit, "Sign up" ,class:"button is-primary"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>


